{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "rangeStrategy": "replace"
    },
    {
      "groupName": "nanostores",
      "matchPackageNames": [
        "nanostores"
      ],
      "matchPackagePrefixes": [
        "@nanostores/"
      ]
    }
  ]
}
